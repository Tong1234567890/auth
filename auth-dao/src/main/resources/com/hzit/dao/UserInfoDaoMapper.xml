<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzit.dao.CaoZuoStudent">


    <!-- 配置映射字段 -->
    <resultMap type="UserInfo" id="userInfoMap">
        <id property="uid" column="uId"/>
        <result property="uname" column="uName"/>
        <result property="upass" column="uPass"/>
        <result property="ustatus" column="uStatus"/>
    </resultMap>
    <select id="findUserById" resultMap="userInfoMap" parameterType="java.lang.Integer">
        SELECT * from userInfo WHERE uid=#{userId}
    </select>
    <select id="findAllUser" resultMap="userInfoMap">
        SELECT * from userInfo
    </select>
    <insert id="addUser" parameterType="UserInfo" >
        INSERT INTO userInfo VALUES (#{uId},#{uName},#{uPass},#{uStatus})
    </insert>
    <update id="updateUser" parameterType="UserInfo">
        UPDATE userInfo SET  uname=#{uName},upass=#{uPass},ustatus=#{uStatus} where uid=#{uId}
    </update>
    <delete id="deleteUser" parameterType="java.lang.Integer" >
        DELETE from userinfo WHERE Stu_Id=#{stuId}
    </delete>
</mapper>
